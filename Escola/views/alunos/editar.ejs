<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>


<main>
    <h2 class="titulo-p1">Cadastro de Novo Aluno</h2>

    <form action="/alunos/editar/<%= alunos.id_aluno %>" method="post" class="form2">
        <div class="form-group">
            <label for="foto">Foto Do Aluno:</label>
            <input type="text" name="foto" value="<%= alunos.foto%>">
        </div>
        <div class="form-group">
            <label for="nome">Nome Do Aluno:</label>
            <input type="text" name="nome" value="<%= alunos.nome %>">
        </div>
        <div class="form-group">
            <label for="idade">Idade:</label>
            <input type="number" name="idade"  value="<%= alunos.idade %>" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email"  value="<%= alunos.email %>" required>
        </div>
        <div class="form-group">
            <label for="Cpf">Cpf:</label>
            <input type="number" name="Cpf" value="<%= alunos.cpf %>" required>
        </div>
        <div class="form-group">
            <label for="sexo">Sexo:</label>
            <select name="sexo"  value="<%= alunos.sexo %>">
                <option value="true">Masculino</option>
                <option value="false">Feminino</option>
            </select>
        </div>
        <div class="form-group">
            <label for="turma">Turma:</label>
            <select name="id_turma" >
                <option value="">Selecione a Turma</option>
                <% for (let turma of dadosTurma) { %>
                    <option value="<%= turma.id_turma %>"><%= turma.nome_turma %></option>
                <% } %>
            </select>
        </div>
        
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="True" id=""  value="<%= alunos.ativo %>">
                <option value="option1">True</option>
                <option value="option2">False</option>
            </select>
        </div>
        <div class="btns">
            <button type="submit" class="btnn btn-principal">Adicionar</button>
            <a href="/professores/listar" class="btnn btn-secundario">Cancelar</a>
        </div>
    </form>
</main>




















