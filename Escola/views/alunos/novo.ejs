<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>


<main>
    <h2 class="titulo-p1">Cadastro de Novo Aluno</h2>

    <form action="/alunos/novo" method="post" class="form">
        <div class="form-group">
            <label for="foto">Foto Do Aluno:</label>
            <input type="text" name="foto" required>
        </div>
        <div class="form-group">
            <label for="nome">Nome Do Aluno:</label>
            <input type="text" name="nome" required>
        </div>
        <div class="form-group">
            <label for="idade">Idade:</label>
            <input type="number" name="idade" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="Cpf">Cpf:</label>
            <input type="number" name="Cpf" required>
        </div>
        <div class="form-group">
            <label for="sexo">Sexo:</label>
            <select name="sexo">
                <option value="option1">Masculino</option>
                <option value="option2">Feminino</option>
            </select>
        </div>
        <div class="form-group">
            <label for="turma">Turma:</label>
            <select name="Turma">
                <option value="option1"><%= turmas.id_turma %></option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="True" id="">
                <option value="option1">True</option>
                <option value="option2">False</option>
            </select>
        </div>
        <div class="btns">
            <button type="submit" class="btnn btn-principal">Adicionar</button>
            <button><a href="/professores/listar" class="btnn">Cancelar</a></button>
        </div>
    </form>
</main>




















<%- include('../includes/footer.ejs') %>