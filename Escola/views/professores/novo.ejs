<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>


<main>
    <h2 class="titulo-p1">Cadastro de Novo Professor</h2>

    <form action="/professores/novo" method="post" class="form">
        <div class="form-group">
            <label for="nome_professor">Nome Do Professor:</label>
            <input type="text" name="nome_professor" required>
        </div>
        <div class="form-group">
            <label for="telefone">Telefone:</label>
            <input type="number" name="telefone" required>
        </div>
        <div class="form-group">
            <label for="Formacao">Formação:</label>
            <select name="Formacao" id="">
                <option >Educação Básica</option>
                <option >Ensino Técnico e Profissionalizante</option>
                <option >Ensino Superior (Graduação)</option>
                <option >Pós-Graduação</option>
            </select>
        </div>
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="ativo" id="">
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
        </div>
        <div >
            <button type="submit" class="btn btn-principal">Adicionar</button>
            <a href="/professores/listar" class="btn btn-secundario" >Cancelar</a>
        </div>
    </form>
</main>




















