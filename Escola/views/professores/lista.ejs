<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>

<main>
    <h2 class="titulo-p1">Lista de Professores</h2>
    <a href="/professores/novo" class="Adicionar">Adicionar professor</a>

    <form action="/professores/listar" method="get" class="forms form-consulta">
    <input type="text" name="busca" placeholder="Buscar por Nome ou Formação">
    <select name="ordem">
        <option value="nome_professor">Ordenar por Professor</option>
        <option value="formacao">Ordenar por Formação</option>
    </select>
    <button type="submit" class="btnn btn-principal">Buscar</button>
    </form>
    <table class="dados-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Formação</th>
                <th>Ativo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for(let professor of dadosProfessores) { %>
            <tr>
                <td> <%= professor.nome_professor %></td>
                <td> <%= professor.telefone %></td>
                <td> <%= professor.formacao %></td>
                <td> <%= professor.ativo%>
                </td>
                <td class="corpo">
                    <a href="/professores/editar/<%= professor.id_professor %>" >
                        <button class=" btnn btn-editar">Editar</button></a>
                    <form action="/professores/excluir/<%= professor.id_professor %>" method="post">
                        <button type="submit" class="btnn btn-excluir">Excluir</button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</main>






<%- include('../includes/footer.ejs') %>