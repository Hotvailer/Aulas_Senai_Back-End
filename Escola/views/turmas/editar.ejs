<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>

<main>
    <h2 class="titulo-p1">Atualizando dados</h2>

    <form action="/turmas/editar/<%= turmas.id_turma %>" method="post" class="form">
        <div class="form-group">
            <label for="nome_turma">Nome Da Turma:</label>
            <input type="text" name="nome_turma" value="<%= turmas.nome_turma %>" required>
        </div>
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="ativo" value="<%= turmas.ativo %>">
                <option value="False">True</option>
                <option value="False">False</option>
            </select>
        </div>
        <div class="btns">
            <button type="submit" >
                <button class=" btnn btn-principal">Adicionar</button></button>
            <a href="/turmas/listar" class=" btnn btn-secundario">Cancelar</a>
        </div>
    </form>
</main>



































