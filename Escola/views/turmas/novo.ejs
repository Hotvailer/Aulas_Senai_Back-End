<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>


<main>
    <h2 class="titulo-p1">Cadastro de Nova Turma</h2>

    <form action="/turmas/novo" method="post" class="form1">
        <div class="form-group">
            <label for="nome_turma">Nome Da Turma:</label>
            <input type="text" name="nome_turma" required>
        </div>
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="ativo" id="">
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
        </div>
        <button type="submit" class="btnn btn-principal">Adicionar</button>
        <a href="/turmas/listar" class="btnn btn-secundario">Cancelar</a>
    </form>
</main>




















