<%- include('../includes/header.ejs', { titulo: "Dashboard"}) %>

<main>
    <h2 class="titulo-p1">Atualizando dados</h2>

    <form action="/disciplinas/novo" method="post" class="form">
        <div class="form-group">
            <label for="nome_disciplina">Nome Da Disciplina:</label>
            <input type="text" name="nome_disciplina"  required>
        </div>
        <div class="form-group">
            <label for="nome_professor">Nome do professor:</label>
            <select name="id_professor" >
                <option value="">Selecione o professor</option>
                <% for (let prof of dadosProfessores) { %>
                    <option value="<%= prof.id_professor %>"><%= prof.nome_professor %></option>
                <% } %>
            </select>

        </div>
        <div class="form-group">
            <label for="ativo">Ativo:</label>
            <select name="ativo">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
        <div class="btns">
            <button type="submit" class=" btnn btn-principal">Adicionar</button>
            <a href="/disciplinas/listar" class=" btnn btn-secundario">Cancelar</a>
        </div>
    </form>
</main>



































